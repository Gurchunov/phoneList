<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:padding="12dp">

    <ImageView
        android:id="@+id/editImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editBrand"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:ems="10"
        android:hint="Бренд"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/editImage"
        app:layout_constraintTop_toTopOf="@+id/editImage" />

    <EditText
        android:id="@+id/editModel"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:ems="10"
        android:hint="Модель"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/editBrand"
        app:layout_constraintTop_toTopOf="@+id/editBrand" />

    <TextView
        android:id="@+id/editOcSystem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Операционная система:"
        app:layout_constraintStart_toEndOf="@+id/editImage"
        app:layout_constraintTop_toBottomOf="@+id/editBrand" />

    <EditText
        android:id="@+id/editOC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="OC"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/editImage"
        app:layout_constraintTop_toBottomOf="@+id/editOcSystem" />
</androidx.constraintlayout.widget.ConstraintLayout>